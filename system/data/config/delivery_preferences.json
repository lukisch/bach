{
  "version": "1.0.0",
  "description": "BACH Delivery Preferences - Zentrale Zustellkonfiguration",

  "default_delivery": {
    "mode": "parallel",
    "methods": ["user_folder", "browser_preview"]
  },

  "delivery_methods": {
    "user_folder": {
      "enabled": true,
      "description": "Ablage im User-Ordner (Standard)",
      "base_path": "user/",
      "create_subdirs": true,
      "subdir_pattern": "{skill}/{date}",
      "supported_formats": ["pdf", "md", "txt", "json", "html"]
    },

    "browser_preview": {
      "enabled": true,
      "description": "PDF automatisch im Browser Ã¶ffnen",
      "browser": "edge",
      "browser_paths": {
        "edge": "C:\\Program Files (x86)\\Microsoft\\Edge\\Application\\msedge.exe",
        "chrome": "C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe",
        "firefox": "C:\\Program Files\\Mozilla Firefox\\firefox.exe"
      },
      "supported_formats": ["pdf", "html"]
    },

    "email": {
      "enabled": true,
      "description": "E-Mail-Zustellung via Gmail",
      "driver": "gmail",
      "default_recipient": "self",
      "self_address": "your-email@example.com",
      "subject_template": "BACH Delivery: {title}",
      "body_template": "Automatische Zustellung von BACH\n\nSkill: {skill}\nAgent: {agent}\nErstellt: {timestamp}",
      "attach_pdf": true,
      "supported_formats": ["pdf", "txt", "md"]
    },

    "telegram": {
      "enabled": true,
      "description": "Telegram-Zustellung via Connector",
      "connector_name": "telegram",
      "send_as_document": true,
      "caption_template": "ðŸ“„ {title}\n\nVon: {skill}",
      "supported_formats": ["pdf", "txt", "md", "json"]
    },

    "cloud_local": {
      "enabled": false,
      "description": "Lokale Cloud-Ordner (Sync lÃ¤uft durch Cloud-Client)",
      "paths": {
        "google_drive": "{USER_HOME}/Google Drive/BACH/",
        "onedrive": "{USER_HOME}/OneDrive/BACH_Delivery/",
        "dropbox": "{USER_HOME}/Dropbox/BACH/"
      },
      "active_clouds": ["onedrive"],
      "create_subdirs": true,
      "subdir_pattern": "{skill}/{date}",
      "supported_formats": ["pdf", "md", "txt", "json", "html"]
    },

    "system_inbox": {
      "enabled": true,
      "description": "System-Inbox fÃ¼r externe Abholung",
      "inbox_path": "data/inbox/",
      "retention_days": 7,
      "supported_formats": ["pdf", "md", "txt", "json"]
    }
  },

  "skill_overrides": {
    "steuer-agent": {
      "mode": "parallel",
      "methods": ["user_folder", "email", "cloud_local"],
      "cloud_local": {
        "active_clouds": ["onedrive"]
      }
    },
    "foerderplaner": {
      "mode": "parallel",
      "methods": ["user_folder", "browser_preview", "email"]
    },
    "research-agent": {
      "mode": "only",
      "methods": ["user_folder"]
    }
  },

  "agent_overrides": {
    "ati-agent": {
      "mode": "parallel",
      "methods": ["user_folder", "system_inbox"]
    }
  },

  "format_handlers": {
    "pdf": {
      "compiler": "markdown_to_pdf",
      "open_after_creation": true
    },
    "html": {
      "template": "default",
      "css": "bach_default.css"
    }
  },

  "routing_rules": {
    "by_trigger": {
      "manual": ["user_folder", "browser_preview"],
      "scheduled": ["user_folder", "email"],
      "event": ["telegram", "system_inbox"]
    },
    "by_priority": {
      "high": ["telegram", "email", "user_folder"],
      "normal": ["user_folder", "system_inbox"],
      "low": ["system_inbox"]
    }
  }
}
