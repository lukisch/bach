{
    "chain_name": "software_3",
    "description": "Software - 3 Aufgaben: 3 Entwicklungsaufgaben pro Worker-Runde, dann Review",
    "mode": "loop",
    "max_rounds": 100,
    "runtime_hours": 3,

    "links": [
        {
            "name": "sonnet-worker",
            "role": "worker",
            "model": "claude-sonnet-4-6",
            "prompt": "worker_sonnet",
            "task_pool": "software",
            "tasks_per_worker": 3,
            "until_full": true,
            "description": "Sonnet arbeitet an 3 Entwicklungsaufgaben"
        },
        {
            "name": "sonnet-reviewer",
            "role": "reviewer",
            "model": "claude-sonnet-4-6",
            "prompt": "reviewer_sonnet",
            "task_pool": "software",
            "review_scope": "batch",
            "description": "Sonnet reviewed den Software-Batch"
        }
    ],

    "prompts": {
        "worker_sonnet": {"type": "file", "path": "prompts/worker_sonnet.txt"},
        "reviewer_sonnet": {"type": "file", "path": "prompts/reviewer_sonnet.txt"}
    },

    "task_pools": {
        "software": {
            "type": "file",
            "path": "BACH_Dev/NEXT_RELEASE.md",
            "description": "BUTTERNUT Release-Plan (Aufgaben-Liste)"
        }
    },

    "selection_strategy": "priority",
    "context_path": null,

    "_marble_run_origin": {
        "chain": "software_3",
        "pipeline": "software",
        "tasks_per_worker": 3,
        "selection": "priority",
        "review_scope": "batch",
        "timeout_minutes": 60
    }
}
