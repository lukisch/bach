{
    "chain_name": "masterplan_10",
    "description": "Masterplan Bulk: 10 Aufgaben pro Worker bevor Review",
    "mode": "loop",
    "max_rounds": 200,
    "runtime_hours": 6,

    "links": [
        {
            "name": "sonnet-worker",
            "role": "worker",
            "model": "claude-sonnet-4-6",
            "prompt": "worker_sonnet",
            "task_pool": "masterplan",
            "tasks_per_worker": 10,
            "until_full": true,
            "description": "Sonnet arbeitet an 10 Release-Aufgaben"
        },
        {
            "name": "opus-reviewer",
            "role": "reviewer",
            "model": "claude-opus-4-6",
            "fallback_model": "claude-sonnet-4-6",
            "prompt": "reviewer_opus",
            "task_pool": "masterplan",
            "review_scope": "batch",
            "description": "Opus reviewed den Batch"
        }
    ],

    "prompts": {
        "worker_sonnet": {"type": "file", "path": "prompts/worker_sonnet.txt"},
        "reviewer_opus": {"type": "file", "path": "prompts/reviewer_opus.txt"}
    },

    "task_pools": {
        "masterplan": {
            "type": "file",
            "path": "BACH_Dev/NEXT_RELEASE.md",
            "description": "BUTTERNUT Release-Plan (Aufgaben-Liste)"
        }
    },

    "selection_strategy": "priority",
    "context_path": null,

    "_marble_run_origin": {
        "chain": "masterplan_10",
        "pipeline": "masterplan",
        "tasks_per_worker": 10,
        "selection": "priority",
        "review_scope": "batch",
        "timeout_minutes": 180
    }
}
