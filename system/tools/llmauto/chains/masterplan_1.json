{
    "chain_name": "masterplan_1",
    "description": "Masterplan Standard: 1 Aufgabe pro Worker (bisheriges Verhalten)",
    "mode": "loop",
    "max_rounds": 200,
    "runtime_hours": 6,

    "links": [
        {
            "name": "sonnet-worker",
            "role": "worker",
            "model": "claude-sonnet-4-6",
            "prompt": "worker_sonnet",
            "task_pool": "masterplan",
            "tasks_per_worker": 1,
            "until_full": true,
            "description": "Sonnet arbeitet an einer Release-Aufgabe"
        },
        {
            "name": "opus-reviewer",
            "role": "reviewer",
            "model": "claude-opus-4-6",
            "fallback_model": "claude-sonnet-4-6",
            "prompt": "reviewer_opus",
            "task_pool": "masterplan",
            "review_scope": "single",
            "description": "Opus reviewed die Aenderung"
        }
    ],

    "prompts": {
        "worker_sonnet": {"type": "file", "path": "prompts/worker_sonnet.txt"},
        "reviewer_opus": {"type": "file", "path": "prompts/reviewer_opus.txt"}
    },

    "task_pools": {
        "masterplan": {
            "type": "file",
            "path": "BACH_Dev/NEXT_RELEASE.md",
            "description": "BUTTERNUT Release-Plan (Aufgaben-Liste)"
        }
    },

    "selection_strategy": "priority",
    "context_path": null,

    "_marble_run_origin": {
        "chain": "masterplan_1",
        "pipeline": "masterplan",
        "tasks_per_worker": 1,
        "selection": "priority",
        "review_scope": "single",
        "timeout_minutes": 30
    }
}
