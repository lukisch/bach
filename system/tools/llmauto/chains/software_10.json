{
    "chain_name": "software_10",
    "description": "Software - 10 beliebig: 10 beliebige Entwicklungsaufgaben pro Worker-Runde",
    "mode": "loop",
    "max_rounds": 100,
    "runtime_hours": 6,

    "links": [
        {
            "name": "sonnet-worker",
            "role": "worker",
            "model": "claude-sonnet-4-6",
            "prompt": "worker_sonnet",
            "task_pool": "software",
            "tasks_per_worker": 10,
            "until_full": true,
            "description": "Sonnet arbeitet an 10 beliebigen Entwicklungsaufgaben"
        },
        {
            "name": "opus-reviewer",
            "role": "reviewer",
            "model": "claude-opus-4-6",
            "fallback_model": "claude-sonnet-4-6",
            "prompt": "reviewer_opus",
            "task_pool": "software",
            "review_scope": "batch",
            "description": "Opus reviewed den grossen Software-Batch"
        }
    ],

    "prompts": {
        "worker_sonnet": {"type": "file", "path": "prompts/worker_sonnet.txt"},
        "reviewer_opus": {"type": "file", "path": "prompts/reviewer_opus.txt"}
    },

    "task_pools": {
        "software": {
            "type": "file",
            "path": "BACH_Dev/NEXT_RELEASE.md",
            "description": "BUTTERNUT Release-Plan (Aufgaben-Liste)"
        }
    },

    "selection_strategy": "any",
    "context_path": null,

    "_marble_run_origin": {
        "chain": "software_10",
        "pipeline": "software",
        "tasks_per_worker": 10,
        "selection": "any",
        "review_scope": "batch",
        "timeout_minutes": 120
    }
}
