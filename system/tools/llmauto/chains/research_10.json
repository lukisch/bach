{
    "chain_name": "research_10",
    "description": "Research - 10 Aufgaben: 10 Forschungsaufgaben pro Worker-Runde",
    "mode": "loop",
    "max_rounds": 100,
    "runtime_hours": 6,

    "links": [
        {
            "name": "sonnet-worker",
            "role": "worker",
            "model": "claude-sonnet-4-6",
            "prompt": "worker_sonnet",
            "task_pool": "research",
            "tasks_per_worker": 10,
            "until_full": true,
            "description": "Sonnet arbeitet an 10 Forschungsaufgaben"
        },
        {
            "name": "opus-reviewer",
            "role": "reviewer",
            "model": "claude-opus-4-6",
            "fallback_model": "claude-sonnet-4-6",
            "prompt": "reviewer_opus",
            "task_pool": "research",
            "review_scope": "batch",
            "description": "Opus reviewed den Forschungs-Batch"
        }
    ],

    "prompts": {
        "worker_sonnet": {"type": "file", "path": "prompts/worker_sonnet.txt"},
        "reviewer_opus": {"type": "file", "path": "prompts/reviewer_opus.txt"}
    },

    "task_pools": {
        "research": {
            "type": "directory",
            "path": "Forschung/",
            "description": "Forschungsartikel und -aufgaben"
        }
    },

    "selection_strategy": "priority",
    "context_path": null,

    "_marble_run_origin": {
        "chain": "research_10",
        "pipeline": "research",
        "tasks_per_worker": 10,
        "selection": "priority",
        "review_scope": "batch",
        "timeout_minutes": 120
    }
}
