{
    "chain_name": "software_project",
    "description": "Software - Projektfokus: Eine Software ALLE Aufgaben fertigstellen, dann wechseln",
    "mode": "loop",
    "max_rounds": 50,
    "runtime_hours": 6,

    "links": [
        {
            "name": "opus-worker",
            "role": "worker",
            "model": "claude-opus-4-6",
            "fallback_model": "claude-sonnet-4-6",
            "prompt": "worker_opus",
            "task_pool": "software",
            "tasks_per_worker": -1,
            "until_full": true,
            "context_hint": "Fokussiere dich auf EIN Softwareprojekt. Bearbeite ALLE offenen Aufgaben fuer dieses Projekt bevor du wechselst. Wenn das Projekt abgeschlossen ist, schreibe das in den Handoff.",
            "description": "Opus bearbeitet ein Softwareprojekt vollstaendig"
        },
        {
            "name": "sonnet-reviewer",
            "role": "reviewer",
            "model": "claude-sonnet-4-6",
            "prompt": "reviewer_sonnet",
            "task_pool": "software",
            "review_scope": "batch",
            "description": "Sonnet reviewed das Softwareprojekt"
        }
    ],

    "prompts": {
        "worker_opus": {"type": "file", "path": "prompts/worker_opus.txt"},
        "reviewer_sonnet": {"type": "file", "path": "prompts/reviewer_sonnet.txt"}
    },

    "task_pools": {
        "software": {
            "type": "file",
            "path": "BACH_Dev/NEXT_RELEASE.md",
            "description": "BUTTERNUT Release-Plan (Aufgaben-Liste)"
        }
    },

    "selection_strategy": "project_focused",
    "context_path": null,

    "_marble_run_origin": {
        "chain": "software_project",
        "pipeline": "software",
        "tasks_per_worker": -1,
        "selection": "project_focused",
        "review_scope": "batch",
        "timeout_minutes": 120
    }
}
