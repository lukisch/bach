{
    "chain_name": "research_article",
    "description": "Research - Artikelfokus: Einen Forschungsartikel komplett weiterentwickeln, dann wechseln",
    "mode": "loop",
    "max_rounds": 50,
    "runtime_hours": 4,

    "links": [
        {
            "name": "opus-worker",
            "role": "worker",
            "model": "claude-opus-4-6",
            "fallback_model": "claude-sonnet-4-6",
            "prompt": "worker_opus",
            "task_pool": "research",
            "tasks_per_worker": -1,
            "until_full": true,
            "context_hint": "Fokussiere dich auf den aktuellen Forschungsartikel. Bearbeite alle offenen Schritte fuer diesen Artikel (Struktur, Inhalt, Argumentation, Referenzen, Formatierung) bevor du zum naechsten wechselst. Dokumentiere jeden Schritt einzeln im Handoff.",
            "description": "Opus bearbeitet einen Forschungsartikel vollstaendig"
        },
        {
            "name": "sonnet-reviewer",
            "role": "reviewer",
            "model": "claude-sonnet-4-6",
            "prompt": "reviewer_sonnet",
            "task_pool": "research",
            "review_scope": "batch",
            "description": "Sonnet reviewed den Forschungsartikel-Batch"
        }
    ],

    "prompts": {
        "worker_opus": {"type": "file", "path": "prompts/worker_opus.txt"},
        "reviewer_sonnet": {"type": "file", "path": "prompts/reviewer_sonnet.txt"}
    },

    "task_pools": {
        "research": {
            "type": "directory",
            "path": "Forschung/",
            "description": "Forschungsartikel und -aufgaben"
        }
    },

    "selection_strategy": "article_focused",
    "context_path": null,

    "_marble_run_origin": {
        "chain": "research_article",
        "pipeline": "research",
        "tasks_per_worker": -1,
        "selection": "article_focused",
        "review_scope": "batch",
        "timeout_minutes": 90
    }
}
