{
  "version": "1.0.0",
  "description": "Problem-Pattern-Katalog fuer Tool-Discovery",
  "created": "2026-01-21",
  "patterns": {
    "encoding": {
      "keywords": ["encoding", "utf-8", "unicode", "mojibake", "umlaute", "ä", "ö", "ü", "zeichen", "character"],
      "tools": ["c_encoding_fixer", "c_umlaut_fixer"],
      "description": "Encoding und Zeichensatz-Probleme"
    },
    "json_repair": {
      "keywords": ["json", "parse", "syntax", "invalid", "broken", "repair", "fix json"],
      "tools": ["c_json_repair", "json_fixer"],
      "description": "JSON-Dateien reparieren"
    },
    "code_analysis": {
      "keywords": ["code", "analyze", "quality", "review", "methoden", "functions", "complexity"],
      "tools": ["c_method_analyzer", "code_analyzer"],
      "description": "Code-Qualitaet und Analyse"
    },
    "import_issues": {
      "keywords": ["import", "module", "dependency", "not found", "missing", "organize imports"],
      "tools": ["c_import_diagnose", "c_import_organizer"],
      "description": "Python Import-Probleme"
    },
    "formatting": {
      "keywords": ["indent", "format", "whitespace", "tabs", "spaces", "einrueckung"],
      "tools": ["c_indent_checker", "c_standard_fixer"],
      "description": "Code-Formatierung"
    },
    "database": {
      "keywords": ["sqlite", "database", "db", "query", "sql", "tabelle"],
      "tools": ["c_sqlite_viewer"],
      "description": "Datenbank-Operationen"
    },
    "conversion": {
      "keywords": ["convert", "transform", "markdown", "pdf", "export", "umwandeln"],
      "tools": ["c_universal_converter", "c_md_to_pdf"],
      "description": "Datei-Konvertierung"
    },
    "backup": {
      "keywords": ["backup", "restore", "sicherung", "wiederherstellen", "snapshot"],
      "tools": ["backup_manager"],
      "description": "Backup und Wiederherstellung"
    },
    "cleanup": {
      "keywords": ["cleanup", "clean", "aufräumen", "delete", "remove", "old files"],
      "tools": ["cleanup", "file_cleaner"],
      "description": "Dateien aufraeumen"
    },
    "documentation": {
      "keywords": ["doc", "documentation", "readme", "license", "dokumentation"],
      "tools": ["c_license_generator", "doc_update_checker"],
      "description": "Dokumentation erstellen/pruefen"
    },
    "path_issues": {
      "keywords": ["path", "pfad", "not found", "file missing", "broken link"],
      "tools": ["path_healer"],
      "description": "Pfad-Probleme heilen"
    },
    "duplicate": {
      "keywords": ["duplicate", "similar", "redundant", "bereits vorhanden", "doppelt"],
      "tools": ["duplicate_detector"],
      "description": "Duplikate finden"
    },
    "emoji": {
      "keywords": ["emoji", "emoticon", "smiley", "unicode symbol"],
      "tools": ["c_emoji_scanner"],
      "description": "Emoji-Analyse"
    },
    "german_text": {
      "keywords": ["german", "deutsch", "rechtschreibung", "grammatik"],
      "tools": ["c_german_scanner"],
      "description": "Deutsche Texte pruefen"
    },
    "steuer": {
      "keywords": ["steuer", "beleg", "finanzamt", "posten", "tax", "invoice"],
      "tools": ["steuer"],
      "description": "Steuer-Verwaltung"
    }
  }
}
