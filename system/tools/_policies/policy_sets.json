{
  "version": "1.0",
  "description": "Policy-Set Definitionen fuer policy_control.py",
  
  "policies": {
    "emoji_safe": {
      "version": "1.0",
      "size": "small",
      "file": "policies/emoji_safe.py",
      "description": "Emoji <-> ASCII-safe Konvertierung",
      "marker_start": "# === POLICY:emoji_safe:",
      "marker_end": "# === END:emoji_safe ===",
      "inject_mode": "inline",
      "inject_after": "^import |^from ",
      "dependencies": []
    },
    "encoding_header": {
      "version": "1.0",
      "size": "small",
      "file": "policies/encoding_header.py",
      "description": "UTF-8 Header und Console Fix",
      "marker_start": "# -*- coding: utf-8 -*-",
      "inject_mode": "header",
      "inject_at": "top",
      "dependencies": []
    },
    "json_safe": {
      "version": "1.0",
      "size": "medium",
      "file": "policies/json_safe.py",
      "description": "Sichere JSON-Operationen",
      "marker_start": "# === POLICY:json_safe:",
      "marker_end": "# === END:json_safe ===",
      "inject_mode": "external",
      "external_filename": "json_safe.py",
      "dependencies": ["emoji_safe"]
    }
  },
  
  "sets": {
    "minimal": {
      "description": "Nur Encoding-Header",
      "policies": ["encoding_header"]
    },
    "standardfixer": {
      "description": "Standard fuer alle Python-Projekte",
      "policies": ["encoding_header", "emoji_safe"]
    },
    "data_tool": {
      "description": "Fuer Datenverarbeitung mit JSON",
      "policies": ["encoding_header", "emoji_safe", "json_safe"]
    },
    "full": {
      "description": "Alle verfuegbaren Policies",
      "policies": ["encoding_header", "emoji_safe", "json_safe"]
    }
  },
  
  "size_thresholds": {
    "small": {
      "max_lines": 30,
      "mode": "inline"
    },
    "medium": {
      "max_lines": 100,
      "mode": "external"
    },
    "large": {
      "max_lines": 999,
      "mode": "external"
    }
  }
}
