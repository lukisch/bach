{
  "policy_name": "BACH Path Rules",
  "version": "1.0.0",
  "description": "Pfadnormalisierung und Strukturregeln fuer BACH-Projekte",
  
  "normalization": {
    "separator": {
      "internal": "/",
      "output_windows": "\\\\",
      "output_unix": "/",
      "auto_detect_os": true
    },
    "case_sensitivity": {
      "windows": false,
      "linux": true,
      "macos": false
    },
    "trailing_slash": {
      "directories": false,
      "normalize": true
    }
  },
  
  "path_variables": {
    "BACH_ROOT": {
      "description": "BACH Installationsverzeichnis",
      "resolve": "auto",
      "required": true
    },
    "PROJECT_ROOT": {
      "description": "Aktuelles Projekt-Verzeichnis",
      "resolve": "context",
      "required": false
    },
    "USER_DATA": {
      "description": "User-spezifische Daten",
      "default": "${BACH_ROOT}/user"
    }
  },
  
  "forbidden_patterns": {
    "absolute_paths_in_code": {
      "pattern": "^[A-Z]:\\\\|^/home/|^/Users/",
      "message": "Verwende BACH_ROOT oder relative Pfade",
      "severity": "warning"
    },
    "double_separators": {
      "pattern": "/|\\\\\\\\",
      "message": "Doppelte Pfadtrenner vermeiden",
      "auto_fix": true
    },
    "spaces_in_paths": {
      "pattern": " ",
      "message": "Leerzeichen in Pfaden vermeiden",
      "severity": "info"
    }
  },
  
  "healing": {
    "enabled": true,
    "strategies": [
      {
        "name": "normalize_separators",
        "priority": 1,
        "auto_apply": true
      },
      {
        "name": "resolve_variables",
        "priority": 2,
        "auto_apply": true
      },
      {
        "name": "check_existence",
        "priority": 3,
        "auto_apply": false,
        "suggest_alternatives": true
      }
    ]
  },
  
  "project_structure": {
    "required_dirs": [],
    "recommended_dirs": ["docs", "tests", "data"],
    "ignored_dirs": ["__pycache__", ".git", "node_modules", ".venv", "venv"]
  },
  
  "validation": {
    "check_existence": false,
    "warn_on_missing": true,
    "create_missing_dirs": false
  }
}
