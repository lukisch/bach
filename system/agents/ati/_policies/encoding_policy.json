{
  "policy_name": "BACH Encoding Standards",
  "version": "1.0.0",
  "description": "Encoding-Regeln fuer konsistente Dateiverarbeitung",
  
  "file_encoding": {
    "default": "utf-8",
    "fallback_chain": ["utf-8", "utf-8-sig", "latin-1", "cp1252"],
    "bom_handling": {
      "utf-8": {
        "read": "strip_bom",
        "write": "no_bom",
        "detect": true
      },
      "utf-16": {
        "read": "preserve_bom",
        "write": "with_bom"
      }
    }
  },
  
  "text_files": {
    "extensions": [".py", ".json", ".md", ".txt", ".yaml", ".yml", ".ini", ".cfg"],
    "line_endings": {
      "preferred": "LF",
      "acceptable": ["LF", "CRLF"],
      "normalize_on_read": true,
      "normalize_on_write": true
    },
    "trailing_newline": {
      "required": true,
      "auto_add": true
    }
  },
  
  "special_characters": {
    "german_umlauts": {
      "allowed": true,
      "in_code": false,
      "in_strings": true,
      "in_comments": true
    },
    "emoji": {
      "allowed_in_docs": true,
      "allowed_in_code": false
    }
  },
  
  "recovery_strategies": {
    "decode_error": {
      "action": "replace",
      "replacement": "?",
      "log_warning": true
    },
    "encode_error": {
      "action": "xmlcharrefreplace",
      "log_warning": true
    }
  },
  
  "validation": {
    "check_encoding_on_read": true,
    "enforce_utf8_on_write": true,
    "report_non_utf8": true
  }
}
