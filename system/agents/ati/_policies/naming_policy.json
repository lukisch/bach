{
  "policy_name": "BACH Naming Conventions",
  "version": "1.0.0",
  "description": "Standardisierte Namenskonventionen fuer BACH-Projekte",
  
  "files": {
    "python_modules": {
      "pattern": "^[a-z][a-z0-9_]*\\.py$",
      "style": "snake_case",
      "examples": ["task_scanner.py", "path_healer.py", "auto_session.py"],
      "forbidden": ["camelCase.py", "PascalCase.py", "kebab-case.py"]
    },
    "classes": {
      "pattern": "^[A-Z][a-zA-Z0-9]*$",
      "style": "PascalCase",
      "examples": ["TaskScanner", "PathHealer", "ProjectBootstrapper"],
      "suffix_conventions": {
        "handlers": "Handler",
        "services": "Service", 
        "managers": "Manager",
        "factories": "Factory"
      }
    },
    "functions": {
      "pattern": "^[a-z][a-z0-9_]*$",
      "style": "snake_case",
      "examples": ["scan_directory", "heal_paths", "generate_structure"],
      "private_prefix": "_",
      "dunder_allowed": true
    },
    "constants": {
      "pattern": "^[A-Z][A-Z0-9_]*$",
      "style": "SCREAMING_SNAKE_CASE",
      "examples": ["BACH_ROOT", "DEFAULT_ENCODING", "MAX_RETRIES"]
    },
    "directories": {
      "pattern": "^[a-z][a-z0-9_-]*$",
      "style": "snake_case or kebab-case",
      "special_prefixes": {
        "_": "private/internal (e.g., _modules, _policies)",
        "__": "Python special (e.g., __pycache__)"
      }
    },
    "config_files": {
      "json": "lowercase_with_underscores.json",
      "yaml": "lowercase-with-hyphens.yaml",
      "markdown": "UPPERCASE_OR_Title_Case.md"
    }
  },
  
  "project_structure": {
    "required_files": ["README.md", "__init__.py"],
    "recommended_files": ["CHANGELOG.md", "requirements.txt"],
    "entry_points": ["main.py", "cli.py", "<project_name>.py"]
  },
  
  "validation": {
    "strict_mode": false,
    "warn_on_violation": true,
    "auto_fix_available": false
  }
}
