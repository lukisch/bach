{
  "name": "python-cli",
  "description": "Python CLI-Projekt mit BACH-konformen Strukturen",
  "version": "1.0.0",
  "directories": [
    "src/{project_name}",
    "src/{project_name}/core",
    "tests",
    "docs",
    "_modules",
    "_policies"
  ],
  "files": [
    {
      "path": "README.md",
      "template": "readme.md.tpl"
    },
    {
      "path": "CHANGELOG.md",
      "template": "changelog.md.tpl"
    },
    {
      "path": ".gitignore",
      "template": "gitignore.tpl"
    },
    {
      "path": "pyproject.toml",
      "template": "pyproject.toml.tpl"
    },
    {
      "path": "src/{project_name}/__init__.py",
      "content": "\"\"\"${project_name} - ${description}\"\"\"\n\n__version__ = '0.1.0'\n"
    },
    {
      "path": "src/{project_name}/__main__.py",
      "content": "from .cli import main\n\nif __name__ == '__main__':\n    main()\n"
    },
    {
      "path": "src/{project_name}/cli.py",
      "template": "cli.py.tpl"
    },
    {
      "path": "src/{project_name}/core/__init__.py",
      "content": "\"\"\"Core functionality.\"\"\"\n"
    },
    {
      "path": "tests/__init__.py",
      "content": ""
    },
    {
      "path": "tests/test_core.py",
      "template": "test_core.py.tpl"
    }
  ],
  "default_modules": ["path_healer", "encoding"],
  "default_policies": ["naming", "encoding"]
}
