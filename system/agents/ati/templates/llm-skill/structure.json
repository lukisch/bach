{
  "name": "llm-skill",
  "description": "LLM Skill mit BACH-konformen Strukturen",
  "version": "1.0.0",
  "directories": [
    "_config",
    "_data",
    "_memory",
    "_memory/context",
    "_modules",
    "_policies"
  ],
  "files": [
    {
      "path": "SKILL.md",
      "template": "skill.md.tpl"
    },
    {
      "path": "README.md",
      "template": "readme.md.tpl"
    },
    {
      "path": "CHANGELOG.md",
      "template": "changelog.md.tpl"
    },
    {
      "path": "_config/config.json",
      "content": "{\n  \"name\": \"${project_name}\",\n  \"version\": \"0.1.0\",\n  \"enabled\": true\n}\n"
    },
    {
      "path": "_config/tools.json",
      "content": "{\n  \"tools\": []\n}\n"
    },
    {
      "path": "_data/tasks.json",
      "content": "{\n  \"tasks\": []\n}\n"
    },
    {
      "path": "_memory/lessons_learned.md",
      "content": "# Lessons Learned\n\n*Dokumentiere hier wichtige Erkenntnisse.*\n"
    },
    {
      "path": "_memory/preferences.json",
      "content": "{\n  \"preferences\": {}\n}\n"
    }
  ],
  "default_modules": ["path_healer", "validation"],
  "default_policies": ["naming", "encoding", "tier_classification"]
}
