{
    "type": "object",
    "properties": {
        "document_type": {
            "type": "string",
            "enum": [
                "Arztbrief",
                "Laborbefund",
                "Rezept",
                "Rechnung",
                "Sonstiges"
            ],
            "description": "Art des Dokuments"
        },
        "date": {
            "type": "string",
            "format": "date",
            "description": "Datum des Dokuments (YYYY-MM-DD)"
        },
        "doctor": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "specialty": {
                    "type": "string"
                },
                "address": {
                    "type": "string"
                }
            },
            "required": [
                "name"
            ]
        },
        "patient": {
            "type": "string",
            "description": "Name des Patienten"
        },
        "diagnoses": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string",
                        "description": "ICD-10 Code falls vorhanden"
                    },
                    "name": {
                        "type": "string",
                        "description": "Diagnose Text"
                    }
                },
                "required": [
                    "name"
                ]
            }
        },
        "medications": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "dosage": {
                        "type": "string"
                    }
                },
                "required": [
                    "name"
                ]
            }
        },
        "summary": {
            "type": "string",
            "description": "Kurze Zusammenfassung des Inhalts"
        }
    },
    "required": [
        "document_type",
        "date",
        "summary"
    ]
}