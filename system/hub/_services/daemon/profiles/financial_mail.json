{
    "name": "financial_mail",
    "description": "Automatischer Abruf von Finanz-E-Mails",
    "enabled": true,

    "schedule": {
        "type": "interval",
        "interval_minutes": 60,
        "quiet_start": "23:00",
        "quiet_end": "07:00"
    },

    "command": "python",
    "script_path": "skills/_services/mail/mail_service.py",
    "arguments": ["sync"],
    "working_dir": "BACH_DIR",

    "on_success": {
        "log": true,
        "notify": false
    },

    "on_failure": {
        "log": true,
        "notify": true,
        "retry": true,
        "max_retries": 3,
        "retry_delay_minutes": 15
    },

    "metadata": {
        "category": "financial",
        "priority": "medium",
        "timeout_seconds": 300,
        "run_on_startup": false
    }
}
