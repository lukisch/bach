{
  "enabled": true,
  "poll_interval_seconds": 15,
  "quiet_start": "23:00",
  "quiet_end": "07:00",
  "respect_quiet_hours": false,
  "mistral_model": "Mistral:latest",
  "classification_temperature": 0.1,
  "escalation_cooldown_seconds": 300,
  "max_events_per_cycle": 10,
  "max_daily_escalations": 20,

  "sources": {
    "connector_messages": {
      "enabled": false,
      "description": "DEAKTIVIERT - Claude Bridge uebernimmt Telegram. Vorher: Mistral Watcher."
    },
    "filesystem": {
      "enabled": false,
      "watched_dirs": [],
      "extensions": [".pdf", ".docx", ".xlsx", ".txt", ".csv"]
    },
    "task_queue": {
      "enabled": true,
      "min_priority": "P2"
    },
    "scheduled": {
      "enabled": false,
      "events": []
    }
  },

  "escalation": {
    "default_profile": "ati",
    "check_claude_running": true
  },

  "logging": {
    "log_file": "data/logs/watcher_daemon.log",
    "log_classifications": true,
    "log_direct_responses": true
  }
}
